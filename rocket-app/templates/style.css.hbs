* {
    background: transparent;
    color: inherit;
    font-size: inherit;
    box-sizing: border-box;
    scrollbar-width: thin;
}

:root {
    color-scheme: light dark;
    --background: Canvas;
    --text: CanvasText;
    --header-h: 80px;

}

[data-theme="light"] {
    color-scheme: light;
}

[data-theme="dark"] {
    color-scheme: dark;
}

[data-theme="hotdog"] {
    --background: #ffb347;
    --text: #d80000;
    color-scheme: light;
}

html {
    height: 100%;
    background: var(--background);
    color: var(--text);
    padding: 20px;
    scroll-snap-type: y mandatory;
    /* snap vertically, strictly */
    scroll-snap-stop: always;
    /* don't skip past sections on fast flicks */
    scroll-behavior: smooth;
    /* nice anchor jumps / keyboard paging */
    overscroll-behavior: contain;
    /* stop overscroll bounce chaining */
    scroll-padding-top: calc(var(--header-h) + env(safe-area-inset-top));
}

body {
    font-family: system-ui;
    height: 100%;
    overflow: auto;
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 0;
}

header {
    position: fixed;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    flex: 0;
    top: 0;
    background: var(--background);
    height: var(--header-h);
    left: 0;
    padding-inline: 20px;
    width: 100%;
    z-index: 1;
}

h1 {
    color: color-mix(in lab, var(--text), var(--background) 18.75%);
    text-align: center;
    font-size: 3em;
}

header>h1 {
    justify-self: center;
    align-self: center;
    grid-column: 2/3;
}

header>fieldset {
    justify-self: end;
    align-self: center;
    grid-column: 3/4;
}

main {
    display: flex;
    flex-direction: column;
    flex: 1;
}

main>section {
    display: grid;
    place-items: center;
    flex: 1 0 calc(100vh - 40px);
    /*outline: var(--text) solid 1px;*/
    scroll-snap-align: start;
    margin-inline: 40px;

}

table {
    max-width: 640px;
    width: 100%;
    margin-inline: auto;
    border-collapse: collapse;
}

h2,
th {
    color: color-mix(in lab, var(--text), var(--background) 31.25%);
}

ul {
    list-style-type: none;
    padding: 0;
}

li {
    margin: 5px 0;
}

a {
    text-decoration: none;
    color: #007bff;
}

a:hover {
    text-decoration: underline;
}

img.disabled {
    filter: grayscale(100%);
    opacity: 0.5;
}

dialog {
    width: 80%;
    height: 80%;
    background: var(--background);
    color: var(--text);
}

.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 10px;
}

figure {
    margin: 0;
}

figcaption {
    font-size: 0.8em;
    text-align: center;
}

::backdrop {
    background: rgba(0, 0, 0, 0.5);
}

dialog,
::backdrop {
    overscroll-behavior: contain;
}

body:has(dialog[open]) {
    overflow: hidden;
}

.grid img {
    height: 204px;
    width: 146px;
}

.modal-header {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: start;
    gap: 10px;
    border-bottom: 1px solid;
    margin-bottom: 10px;
}

.modal-header h2 {
    margin: 0;
    font-size: 1.2em;
}

.modal-content {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.modal-body {
    overflow: auto;
    flex-grow: 1;
}

#url {
    width: 42ch;
    font-family: monospace;
}

fieldset:has(#url) {
    legend {
        display: none;
    }
    border:none;
    display: flex;
    flex-direction: column;
    font-size:3em;
    gap:1em;
}
input{
    border-radius: 0.5em;
    padding:0.5em;
}
button{
    border-radius: 0.5em;;
}